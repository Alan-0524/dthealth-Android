<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.dthealth.MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/cardview_shadow_start_color"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="PrivateResource">

        <Button
            android:id="@+id/load_heartbeat"
            android:layout_width="fill_parent"
            android:layout_height="95dp"
            android:text="load my current heartbeat"
            android:textStyle="bold" />

        <Button
            android:id="@+id/load_bloodPressure"
            android:layout_width="fill_parent"
            android:layout_height="95dp"
            android:text="load my current blood pressure"
            android:textStyle="bold" />

        <Button
            android:id="@+id/load_bloodFat"
            android:layout_width="fill_parent"
            android:layout_height="95dp"
            android:text="load my current blood fat"
            android:textStyle="bold" />

        <Button
            android:id="@+id/load_glucose"
            android:layout_width="fill_parent"
            android:layout_height="95dp"
            android:text="load my current glucose"
            android:textStyle="bold" />

        <Button
            android:id="@+id/load_temperature"
            android:layout_width="fill_parent"
            android:layout_height="95dp"
            android:text="load my current temperature"
            android:textStyle="bold" />
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />


</androidx.constraintlayout.widget.ConstraintLayout>